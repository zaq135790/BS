.ai-fab {
  position: fixed;
  top: 460rpx;
  left: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #4caf50 0%, #8bc34a 100%);
  box-shadow: 0 14rpx 34rpx rgba(0, 0, 0, 0.18);
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1200;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  overflow: hidden;
  animation: pulse 2.2s ease-in-out infinite;
}

.ai-fab:active {
  transform: scale(0.94);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.18);
}

.fab-icon {
  width: 70rpx;
  height: 70rpx;
}

.ai-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
  backdrop-filter: blur(6rpx);
  z-index: 1300;
}

.ai-card {
  position: fixed;
  left: 40rpx;
  right: 40rpx;
  bottom: 180rpx;
  max-height: 70vh;
  padding: 24rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(12rpx);
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  gap: 18rpx;
  z-index: 1400;
  border: 1rpx solid rgba(255, 255, 255, 0.65);
}

.ai-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  top: 0;
  background: rgba(255, 255, 255, 0.96);
  padding-bottom: 8rpx;
  z-index: 1;
}

.ai-title .title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
}

.ai-title .subtitle {
  margin-top: 6rpx;
  font-size: 30rpx;
  color: #666;
}

.status-group {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.status-badge {
  padding: 10rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(76, 175, 80, 0.12);
  color: #2e7d32;
  font-size: 28rpx;
}

.close {
  font-size: 36rpx;
  color: #999;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  background: rgba(0, 0, 0, 0.04);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
}

.quick-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.quick-item {
  padding: 12rpx 18rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #e8f5e9 0%, #f1f8e9 100%);
  color: #2e7d32;
  font-size: 28rpx;
  transition: transform 0.2s ease;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.06);
}

.quick-item:active {
  transform: scale(0.96);
}

.chat-panel {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  max-height: 360rpx;
  overflow-y: auto;
  padding-right: 6rpx;
  background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);
  border-radius: 16rpx;
  padding: 14rpx;
}

.bubble {
  padding: 16rpx 18rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  line-height: 1.5;
  word-break: break-all;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.08);
}

.bubble.user {
  align-self: flex-end;
  background: linear-gradient(135deg, #67b26f 0%, #4ca2cd 100%);
  color: #fff;
  border-top-right-radius: 4rpx;
}

.bubble.assistant {
  align-self: flex-start;
  background: #f7f9fc;
  color: #333;
  border-top-left-radius: 4rpx;
}

.chat-empty {
  padding: 30rpx 20rpx;
  text-align: center;
  color: #888;
  font-size: 30rpx;
  background: #f8fafc;
  border-radius: 16rpx;
}

.input-bar {
  display: flex;
  gap: 12rpx;
  align-items: center;
  padding: 10rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #eef2f7 100%);
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #eef2f7 100%);
  font-size: 32rpx;
  color: #333;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.placeholder {
  color: #999;
  font-size: 28rpx;
}

.send-btn {
  background: linear-gradient(135deg, #4caf50 0%, #8bc34a 100%);
  border: none;
  color: #fff;
  border-radius: 999rpx;
  padding: 0 26rpx;
  font-size: 32rpx;
  box-shadow: 0 6rpx 16rpx rgba(76, 175, 80, 0.35);
  transition: transform 0.2s ease;
}

.send-btn:disabled {
  background: #c8e6c9;
  color: #fff;
  box-shadow: none;
}

@keyframes pulse {
  0% { transform: scale(1); box-shadow: 0 14rpx 34rpx rgba(0, 0, 0, 0.18); }
  50% { transform: scale(1.03); box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.22); }
  100% { transform: scale(1); box-shadow: 0 14rpx 34rpx rgba(0, 0, 0, 0.18); }
}

