/**app.wxss**/
/* 全局样式重置 */
page {
  background: #f6f6f6;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  line-height: 1.6;
}

.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  min-height: 100vh;
}

/* 按钮样式重置 */
button {
  background: initial;
  border: none;
  outline: none;
  padding: 0;
  margin: 0;
  font-size: inherit;
  color: inherit;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

/* 通用样式类 */
.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-around {
  justify-content: space-around;
}

.flex-1 {
  flex: 1;
}

/* 间距类 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }

.p-10 { padding: 10rpx; }
.p-20 { padding: 20rpx; }
.p-30 { padding: 30rpx; }
.pt-10 { padding-top: 10rpx; }
.pt-20 { padding-top: 20rpx; }
.pb-10 { padding-bottom: 10rpx; }
.pb-20 { padding-bottom: 20rpx; }
.pl-10 { padding-left: 10rpx; }
.pl-20 { padding-left: 20rpx; }
.pr-10 { padding-right: 10rpx; }
.pr-20 { padding-right: 20rpx; }

/* 字体大小类 */
.text-xs { font-size: 20rpx; }
.text-sm { font-size: 24rpx; }
.text-base { font-size: 28rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }
.text-2xl { font-size: 48rpx; }

/* 字体粗细类 */
.font-normal { font-weight: normal; }
.font-medium { font-weight: 500; }
.font-bold { font-weight: bold; }

/* 颜色类 */
.text-primary { color: #4CAF50; }
.text-secondary { color: #666; }
.text-muted { color: #999; }
.text-white { color: white; }
.text-black { color: #333; }

.bg-primary { background-color: #4CAF50; }
.bg-secondary { background-color: #666; }
.bg-white { background-color: white; }
.bg-gray { background-color: #f5f5f5; }

/* 圆角类 */
.rounded { border-radius: 8rpx; }
.rounded-lg { border-radius: 15rpx; }
.rounded-xl { border-radius: 20rpx; }
.rounded-full { border-radius: 50%; }

/* 阴影类 */
.shadow { box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1); }
.shadow-lg { box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15); }

/* 动画类 */
.transition { transition: all 0.3s ease; }
.hover-lift:hover { transform: translateY(-2rpx); }
.hover-scale:active { transform: scale(0.98); }

/* 隐藏类 */
.hidden { display: none; }
.visible { display: block; }

/* 溢出处理 */
.overflow-hidden { overflow: hidden; }
.text-ellipsis { 
  white-space: nowrap; 
  overflow: hidden; 
  text-overflow: ellipsis; 
}

/* 多行文本省略 */
.text-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.text-clamp-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}