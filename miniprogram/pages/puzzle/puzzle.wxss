/* pages/puzzle/puzzle.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: white;
  font-size: 32rpx;
}

.start-screen {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: white;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  margin-bottom: 40rpx;
  opacity: 0.9;
}

.difficulty-selector {
  margin-bottom: 60rpx;
}

.label {
  display: block;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.difficulty-options {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.difficulty-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid transparent;
  border-radius: 25rpx;
  padding: 15rpx 30rpx;
  font-size: 24rpx;
}

.difficulty-btn.active {
  background: #4CAF50;
  border-color: #4CAF50;
}

.start-btn {
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.game-screen {
  color: white;
}

.game-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
}

.timer, .progress {
  font-size: 24rpx;
}

.hint-btn {
  background: #FF9800;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 20rpx;
}

.puzzle-area {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.puzzle-grid {
  display: grid;
  gap: 4rpx;
  background: rgba(255, 255, 255, 0.1);
  padding: 10rpx;
  border-radius: 15rpx;
}

.puzzle-piece {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.puzzle-piece.completed {
  background: #4CAF50;
}

.piece-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.piece-placeholder {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.hint {
  text-align: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  font-size: 24rpx;
}

.end-screen {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: white;
  text-align: center;
}

.final-score {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn {
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.btn.secondary {
  background: transparent;
  border: 2rpx solid white;
}


