/* pages/puzzle/puzzle.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: white;
  font-size: 32rpx;
}

.start-screen {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: white;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  margin-bottom: 40rpx;
  opacity: 0.9;
}

.difficulty-selector {
  margin-bottom: 60rpx;
}

.label {
  display: block;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.difficulty-options {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.difficulty-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid transparent;
  border-radius: 25rpx;
  padding: 15rpx 30rpx;
  font-size: 24rpx;
}

.difficulty-btn.active {
  background: #4CAF50;
  border-color: #4CAF50;
}

.start-btn {
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.game-screen {
  color: white;
}

.game-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
}

.timer, .progress {
  font-size: 24rpx;
}

.hint-btn {
  background: #FF9800;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 20rpx;
}

.puzzle-area {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.puzzle-grid {
  display: grid;
  gap: 4rpx;
  background: rgba(255, 255, 255, 0.1);
  padding: 10rpx;
  border-radius: 15rpx;
  width: 100%;
  max-width: 600rpx;
  /* 确保网格容器有固定宽度，这样grid会自动分配每个块的大小 */
}

.puzzle-piece {
  /* 根据gridSize动态调整大小，确保在不同难度下都能正常显示 */
  aspect-ratio: 1;
  min-width: 80rpx;
  min-height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  overflow: hidden;
  position: relative;
}

.puzzle-piece.completed {
  background: #4CAF50;
}

/* 拼图块显示图片切片的样式 */
.puzzle-piece:not(.completed) {
  background-color: rgba(255, 255, 255, 0.1);
  background-size: cover;
  background-position: center;
}

.piece-placeholder {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

/* 下方拼图区 */
.tray-area {
  margin-top: 30rpx;
  padding: 0 20rpx 20rpx;
}

.tray-grid {
  display: grid;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.08);
  padding: 10rpx;
  border-radius: 15rpx;
}

.tray-piece {
  aspect-ratio: 1;
  min-width: 80rpx;
  min-height: 80rpx;
  border-radius: 8rpx;
  border: 2rpx solid transparent;
  box-sizing: border-box;
  transition: border-color 0.2s ease, transform 0.2s ease;
}

.tray-piece.selected {
  border-color: #ffb400;
  transform: scale(1.03);
}

.tray-hint {
  margin-top: 12rpx;
  text-align: center;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

/* 提示大图覆盖层 */
.hint-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.75);
  z-index: 999;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.hint-image {
  width: 90%;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.25);
}

.hint-tip {
  margin-top: 20rpx;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  opacity: 0.9;
}

.hint {
  text-align: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  font-size: 24rpx;
}

.end-screen {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: white;
  text-align: center;
}

.final-score {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn {
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.btn.secondary {
  background: transparent;
  border: 2rpx solid white;
}


