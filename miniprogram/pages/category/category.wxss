.container {
  position: relative;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  object-fit: cover;
}

/* 分类标签 */
.category-tabs {
  display: flex;
  position: relative;
  z-index: 1;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 32rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
  font-weight: 500;
}

.tab-item.active {
  color: #4CAF50;
  font-weight: bold;
  background: rgba(76, 175, 80, 0.1);
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 6rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #8BC34A 100%);
  border-radius: 3rpx;
}

.tab-item:active {
  background: rgba(76, 175, 80, 0.05);
}

/* 昆虫列表：单列，上下排列，左图右文 */
.insect-list {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  gap: 20rpx;
  box-sizing: border-box;
  background: #8BC34A;
}

.insect-card {
  width: 100%;
  box-sizing: border-box;
  margin: 0 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #f5e6d3; /* 与首页一致的浅米底，保证可见 */
  border-radius: 18rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.insect-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.insect-image {
  width: 200rpx;
  height: 200rpx;
  object-fit: cover;
  flex-shrink: 0;
  display: block;
  border-radius: 12rpx;
}

.insect-info {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  background: linear-gradient(135deg, rgba(245, 250, 240, 0.9) 0%, rgba(230, 243, 225, 0.9) 100%); /* 轻浅绿渐变仅文字区域 */
  min-height: 200rpx;
  color: #1f1f1f; /* 提升对比度 */
  border-radius: 12rpx;
}

.insect-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.insect-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 家长版科普信息：图文分离，文字更大更清晰（约 16px => 32rpx） */
.parent-card {
  align-items: flex-start;
}

.parent-info {
  justify-content: flex-start;
}

.adult-text-row {
  display: flex;
  margin-top: 10rpx;
}

.adult-label {
  font-size: 28rpx;
  color: #555;
  font-weight: bold;
  flex-shrink: 0;
}

.adult-content {
  font-size: 32rpx; /* 约 16px */
  color: #444;
  line-height: 1.6;
  margin-left: 10rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: white;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  color: white;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 动画效果 */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.insect-card {
  animation: slideInUp 0.6s ease-out;
}

.insect-card:nth-child(1) { animation-delay: 0.1s; }
.insect-card:nth-child(2) { animation-delay: 0.2s; }
.insect-card:nth-child(3) { animation-delay: 0.3s; }
.insect-card:nth-child(4) { animation-delay: 0.4s; }
