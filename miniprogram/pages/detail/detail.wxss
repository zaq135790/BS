.container {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 轮播图包装器（在识别要点文字上面） */
.gallery-wrapper {
  width: 100%;
  margin-bottom: 0;
  border-radius: 12rpx 12rpx 0 0;
  overflow: hidden;
  box-shadow: none;
}

.detail-gallery-swiper {
  width: 100%;
  height: 400rpx;
}

.detail-gallery-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 顶部视频容器 */
.video-container {
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  padding: 30rpx;
  box-sizing: border-box;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.main-video {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.main-image {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  object-fit: cover;
}

.video-placeholder {
  width: 100%;
  height: 400rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.placeholder-text {
  font-size: 32rpx;
  color: #999;
}

/* 详情内容 */
.content {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  margin: 20rpx;
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 52rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx 0 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.type-badge {
  display: inline-block;
  padding: 8rpx 24rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #8BC34A 100%);
  color: white;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
  text-align: center;
  width: 100%;
  box-sizing: border-box;
}

.info-section {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

/* 识别要点区域：图片和文字之间无空白 */
.identify-section {
  padding-top: 0;
  padding-bottom: 30rpx;
}

.identify-section .gallery-wrapper {
  margin-bottom: 0;
}

.identify-section .section-title {
  margin-top: 0;
  padding-top: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.identify-section .identify-content {
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-top: 0;
}

/* 图片包装器 */
.section-image-wrapper {
  width: 100%;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-image {
  width: 100%;
  height: 400rpx;
  object-fit: cover;
  display: block;
}

.info-section:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.section-title::before {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #8BC34A 100%);
  margin-right: 15rpx;
  border-radius: 4rpx;
}

.section-content {
  font-size: 30rpx;
  color: #666;
  line-height: 1.8;
}

/* 口诀区域特殊样式 */
.rhyme-section {
  background: #F5E6D3;
  border-left: 6rpx solid #FFC107;
}

.rhyme-content {
  padding: 20rpx 0;
}

.rhyme-text {
  font-size: 36rpx;
  color: #FF6F00;
  font-weight: bold;
  line-height: 1.8;
  text-align: center;
  display: block;
}

/* 知识区域特殊样式 */
.knowledge-section {
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.05) 0%, rgba(139, 195, 74, 0.05) 100%);
  border-left: 6rpx solid #4CAF50;
}

.knowledge-content {
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.knowledge-text {
  font-size: 32rpx;
  color: #333;
  line-height: 2;
  display: block;
  text-indent: 2em;
}

.audio-btn {
  align-self: flex-start;
  padding: 14rpx 28rpx;
  border-radius: 999rpx;
  border: none;
  background: linear-gradient(135deg, #4CAF50, #8BC34A);
  color: white;
  font-size: 28rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.12);
}

.audio-btn::after {
  border: none;
}

.audio-btn.playing {
  background: linear-gradient(135deg, #ff9800, #ffc107);
  box-shadow: 0 8rpx 20rpx rgba(255, 193, 7, 0.2);
}

.point {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding: 15rpx;
  background: rgba(76, 175, 80, 0.05);
  border-radius: 10rpx;
  border-left: 4rpx solid #4CAF50;
}

.point-icon {
  color: #4CAF50;
  margin-right: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: white;
  font-size: 28rpx;
}


/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.info-section {
  animation: fadeInUp 0.6s ease-out;
}

.info-section:nth-child(1) { animation-delay: 0.1s; }
.info-section:nth-child(2) { animation-delay: 0.2s; }
.info-section:nth-child(3) { animation-delay: 0.3s; }
.info-section:nth-child(4) { animation-delay: 0.4s; }

