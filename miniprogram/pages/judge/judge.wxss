/* pages/judge/judge.wxss */
.container {
  padding: 0;
  min-height: 100vh;
  background: linear-gradient(135deg, rgba(245, 250, 240, 0.9) 0%, rgba(230, 243, 225, 0.9) 100%);
  position: relative;
  overflow: hidden;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: white;
  font-size: 32rpx;
}

/* 开始界面 */
.start-screen {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: white;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.start-bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.start-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.05) 0%, rgba(0, 0, 0, 0.15) 100%);
}

.start-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 36rpx;
  padding: 40rpx 30rpx;
  transform: translateY(375rpx);
}

.title {
  font-size: 68rpx;
  font-weight: 900;
  letter-spacing: 6rpx;
  text-shadow: 0 4rpx 18rpx rgba(0, 0, 0, 0.35);
  margin-bottom: 12rpx;
}

.title-spacer {
  height: 96rpx; /* 保持原有标题占位，不影响按钮尺寸 */
  width: 100rpx;
}

.start-actions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  width: 100%;
  max-width: 100%;
}

.start-btn,
.exit-btn {
  border: 3rpx solid #666;
  border-radius: 999rpx;
  padding: 10rpx 85rpx;
  font-size: 50rpx;
  font-family: "PingFang SC", "HarmonyOS Sans", "Helvetica", "Arial", sans-serif;
  font-weight: bold;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.25);
  width: 100%;
}

.start-btn {
  background: linear-gradient(135deg, #7ed957 0%, #4caf50 100%);
  color: #fff;
}

.exit-btn {
  background: linear-gradient(135deg, #ff6f61 0%, #ff5252 100%);
  color: #fff;
}

/* 游戏界面 */
.game-screen {
  color: #000;
  position: relative;
}

.progress {
  margin-bottom: 40rpx;
}

.progress-bar {
  width: 100%;
  height: 10rpx;
  background: rgba(255, 255, 255, 0.3);
  border: 2rpx solid #666;
  border-radius: 5rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #4CAF50;
  transition: width 0.3s ease;
}

.progress-text {
  display: block;
  text-align: center;
  margin-top: 15rpx;
  font-size: 26rpx;
}

/* 提示按钮 */
.hint-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 3rpx solid #666;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.hint-icon {
  font-size: 40rpx;
}

/* 步骤容器 */
.step-container {
  position: relative;
}

/* 第一步样式 */
.insect-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  margin-top: 60rpx;
}

.insect-image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 20rpx;
  border: 2rpx solid #666;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  background: white;
}

.rhyme-section {
  background: rgba(255, 255, 255, 0.15);
  border: 3rpx solid #666;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.rhyme-label {
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
  display: block;
  margin-bottom: 15rpx;
}

.rhyme-text {
  font-size: 40rpx;
  line-height: 1.8;
  color: #000;
  display: block;
}

.answer-display {
  background: rgba(76, 175, 80, 0.3);
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.answer-text {
  font-size: 30rpx;
  font-weight: bold;
  color: #FFD700;
}

.input-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  margin-top: 60rpx;
  margin-bottom: 30rpx;
}

.name-input {
  width: 100%;
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx solid #666;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  height: 80rpx;
  line-height: 70rpx;
  box-sizing: border-box;
}

.submit-btn {
  background: #4CAF50;
  color: white;
  border: 3rpx solid #666;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  font-size:45rpx;
  font-weight: bold;
  min-width: 300rpx;
  height: 120rpx;
  line-height: 80rpx;
  text-align: center;
  box-sizing: border-box;
}

.submit-btn[disabled] {
  opacity: 0.6;
}

/* 第二步样式 */
.insect-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  margin-top: 40rpx;
}

.insect-image-small {
  width: 200rpx;
  height: 200rpx;
  border-radius: 15rpx;
  border: 2rpx solid #666;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
  background: white;
}

.insect-name {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.insect-rhyme {
  font-size: 28rpx;
  opacity: 0.9;
}

.question-section {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  text-align: center;
}

.question-text {
  font-size: 32rpx;
  font-weight: bold;
}

.answer-options {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
  gap: 30rpx;
}

.end-actions {
  margin-top: 20rpx;
  padding: 0 20rpx 20rpx;
}

.end-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  border: 3rpx solid #2f7d32;
  background: linear-gradient(135deg, #c8f0d0 0%, #9bd7a4 100%);
  color: #103515;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.answer-btn {
  flex: 1;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: 3rpx solid #666;
  transition: all 0.3s ease;
}

.answer-btn.beneficial {
  background: #4CAF50;
  color: white;
}

.answer-btn.harmful {
  background: #f44336;
  color: white;
}

.answer-btn.selected {
  border-color: #FFD700;
  transform: scale(1.05);
}

.answer-btn.correct {
  background: #4CAF50;
  border-color: #4CAF50;
}

.answer-btn.wrong {
  background: #f44336;
  border-color: #f44336;
}

.answer-btn[disabled] {
  opacity: 0.7;
}

/* 结果显示 */
.result-display {
  text-align: center;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.result-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.result-text.correct {
  color: #4CAF50;
}

.result-text.wrong {
  color: #f44336;
}

.correct-answer {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 结束界面 */
.end-screen {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  color: #222;
  text-align: center;
  padding: 40rpx;
}

.end-title {
  font-size: 56rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 60rpx;
}

.end-content {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  min-width: 500rpx;
}

.score-display {
  margin-bottom: 30rpx;
}

.score-label {
  font-size: 28rpx;
  color: #444;
  display: block;
  margin-bottom: 15rpx;
}

.score-value {
  font-size: 72rpx;
  font-weight: bold;
  color: #4CAF50;
  display: block;
}

.accuracy {
  font-size: 32rpx;
  color: #222;
  display: block;
}

.buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
  max-width: 600rpx;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #222;
  border-radius: 50rpx;
  padding: 24rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.18);
}

.btn.primary {
  background: #4CAF50;
  color: #103515;
  border: 3rpx solid #2f7d32;
}

.btn.secondary {
  background: transparent;
  border: 3rpx solid #666;
  color: #222;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.12);
}

/* 报告界面 */
.report-screen {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding: 40rpx;
  color: #333;
}

.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 25rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.report-title {
  font-size: 52rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 48rpx;
  color: #999;
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 50%;
}

.report-content {
  margin-bottom: 50rpx;
}

.report-summary {
  display: flex;
  justify-content: space-around;
  margin-bottom: 50rpx;
  padding: 50rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.summary-label {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.summary-value {
  font-size: 56rpx;
  font-weight: bold;
  color: #4CAF50;
}

.report-details {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.details-title {
  font-size: 44rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 40rpx;
  color: #333;
  text-align: center;
  padding-bottom: 20rpx;
  border-bottom: 3rpx solid #eee;
}

.detail-item {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 249, 250, 0.9) 100%);
  border-radius: 25rpx;
  padding: 35rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border-left: 6rpx solid #4CAF50;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}

.detail-question {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.detail-status {
  font-size: 48rpx;
  font-weight: bold;
  margin-left: 20rpx;
}

.detail-status.correct {
  color: #4CAF50;
}

.detail-status.wrong {
  color: #f44336;
}

.detail-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.detail-step {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 15rpx;
  flex-wrap: wrap;
}

.detail-step-label {
  font-size: 32rpx;
  color: #666;
  font-weight: 500;
  margin-right: 15rpx;
}

.detail-step-value {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
}

.detail-step-value.correct {
  color: #4CAF50;
}

.detail-step-value.wrong {
  color: #f44336;
}

.wrong-hint {
  font-size: 28rpx;
  color: #f44336;
  margin-left: 10rpx;
  opacity: 0.8;
}

.report-buttons {
  display: flex;
  gap: 25rpx;
  padding: 0 20rpx;
}

.report-buttons .btn {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
}
