/* pages/judge/judge.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: white;
  font-size: 32rpx;
}

.start-screen {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: white;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  margin-bottom: 40rpx;
  opacity: 0.9;
}

.game-info {
  margin-bottom: 60rpx;
  font-size: 24rpx;
}

.start-btn {
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.game-screen {
  color: white;
}

.progress {
  margin-bottom: 40rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #4CAF50;
  transition: width 0.3s ease;
}

.progress-text {
  display: block;
  text-align: center;
  margin-top: 10rpx;
  font-size: 24rpx;
}

.score {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.insect-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.insect-image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.insect-name {
  font-size: 36rpx;
  font-weight: bold;
}

.answer-options {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.answer-btn {
  width: 200rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
}

.answer-btn.beneficial {
  background: #4CAF50;
  color: white;
}

.answer-btn.harmful {
  background: #f44336;
  color: white;
}

.answer-btn.selected {
  border-color: #FFD700;
  transform: scale(1.05);
}

.answer-btn.correct {
  background: #4CAF50;
  border-color: #4CAF50;
}

.answer-btn.wrong {
  background: #f44336;
  border-color: #f44336;
}

.answer-btn[disabled] {
  opacity: 0.7;
}

.result-display {
  text-align: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
}

.result-text {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.result-text.correct {
  color: #4CAF50;
}

.result-text.wrong {
  color: #f44336;
}

.correct-answer {
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.response-time {
  font-size: 20rpx;
  opacity: 0.8;
}

.end-screen {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: white;
  text-align: center;
}

.final-score {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.accuracy {
  font-size: 28rpx;
  margin-bottom: 60rpx;
}

.buttons {
  display: flex;
  gap: 20rpx;
}

.btn {
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.btn.secondary {
  background: transparent;
  border: 2rpx solid white;
}

