/* pages/video/video.wxss */
.container {
  position: relative;
  min-height: 100vh;
  background: #000;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: white;
  font-size: 32rpx;
}

.video-container {
  background: #000;
}

.video-wrapper {
  position: relative;
}

.video-player {
  width: 100%;
  height: 420rpx;
  background: #000;
}

.video-player.fullscreen {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw !important;
  height: 100vh !important;
  z-index: 9999;
  object-fit: contain !important;
}

.fs-fab {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 14rpx 24rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  z-index: 8;
  line-height: 1;
}

.pause-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -30rpx;
  margin-left: -40rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  z-index: 6;
  text-align: center;
  line-height: 36rpx;
  width: 80rpx;
  height: 60rpx;
}

.fullscreen-back {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  z-index: 7;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  width: 70rpx;
  height: 70rpx;
  font-size: 34rpx;
  text-align: center;
  line-height: 70rpx;
}

.video-info {
  padding: 30rpx;
  background: white;
}

.video-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

.video-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.insect-name {
  background: #e8f5e8;
  color: #4CAF50;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.duration {
  color: #999;
}

.view-count {
  color: #999;
}

.video-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.video-controls {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  background: white;
  border-top: 1rpx solid #eee;
  justify-content: center;
}

.control-btn {
  flex: 1;
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.control-btn.single {
  flex: 0 0 60%;
}

.recommendations {
  padding: 30rpx;
  background: white;
  margin-top: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.video-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.recommend-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(245, 250, 240, 0.9) 0%, rgba(230, 243, 225, 0.9) 100%);
  border-radius: 15rpx;
}

.recommend-thumb {
  width: 120rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.recommend-info {
  flex: 1;
}

.recommend-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.recommend-duration {
  font-size: 24rpx;
  color: #666;
}

.back-btn {
  position: fixed;
  top: 60rpx;
  left: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.back-icon {
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}


