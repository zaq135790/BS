.container {
  position: relative;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  object-fit: cover;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin: 40rpx 0;
  text-align: center;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
  position: relative;
  z-index: 1;
}

.game-grid {
  display: flex;
  gap: 20rpx;
  margin: 20rpx;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.game-card {
  flex: 1;
  background: linear-gradient(135deg, rgba(245, 250, 240, 0.9) 0%, rgba(230, 243, 225, 0.9) 100%);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.game-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.game-icon {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 25rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.game-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.game-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.game-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 游戏记录统计 */
.stats-section {
  position: relative;
  z-index: 1;
  background: linear-gradient(135deg, rgba(245, 250, 240, 0.9) 0%, rgba(230, 243, 225, 0.9) 100%);
  backdrop-filter: blur(10rpx);
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  text-align: center;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  display: block;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 游戏记录列表 */
.records-section {
  position: relative;
  z-index: 1;
  background: linear-gradient(135deg, rgba(245, 250, 240, 0.9) 0%, rgba(230, 243, 225, 0.9) 100%);
  backdrop-filter: blur(10rpx);
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.records-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.refresh-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(76, 175, 80, 0.1);
  transition: transform 0.3s ease;
}

.refresh-icon:active {
  background: rgba(76, 175, 80, 0.2);
}

.refresh-icon.rotating {
  animation: rotate 1s linear infinite;
}

.refresh-icon-text {
  font-size: 32rpx;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.game-tabs {
  display: flex;
  gap: 10rpx;
  margin-bottom: 25rpx;
}

.tab-btn {
  padding: 15rpx 25rpx;
  background: rgba(76, 175, 80, 0.1);
  color: #666;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
  transition: all 0.3s ease;
}

.tab-btn.active {
  background: linear-gradient(135deg, #4CAF50 0%, #8BC34A 100%);
  color: white;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: white;
  border-radius: 15rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.record-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.record-info {
  flex: 1;
}

.record-game {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 5rpx;
}

.record-time {
  font-size: 22rpx;
  color: #999;
}

.record-score {
  font-size: 32rpx;
  font-weight: bold;
  color: #4CAF50;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: white;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  color: #999;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 15rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 26rpx;
  opacity: 0.8;
}

/* 动画效果 */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.game-card {
  animation: slideInUp 0.6s ease-out;
}

.game-card:nth-child(1) { animation-delay: 0.1s; }
.game-card:nth-child(2) { animation-delay: 0.2s; }
    