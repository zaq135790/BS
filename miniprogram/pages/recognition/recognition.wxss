/* pages/recognition/recognition.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f7ff 0%, #e8f5e9 50%, #ffffff 100%);
  padding: 40rpx 30rpx 60rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 50rpx;
  padding: 20rpx 0;
}

.title {
  display: block;
  font-size: 52rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 15rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #7f8c8d;
  line-height: 1.6;
}

/* 上传区域 */
.upload-section {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(76, 175, 80, 0.12);
  transition: all 0.3s ease;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 420rpx;
  border: 4rpx dashed #4CAF50;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #f8fff8 0%, #ffffff 100%);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.upload-placeholder::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(76, 175, 80, 0.05), transparent);
  animation: shine 3s infinite;
}

@keyframes shine {
  0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
  100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

.upload-icon {
  font-size: 120rpx;
  margin-bottom: 25rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(76, 175, 80, 0.2));
  animation: float 2s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.upload-text {
  font-size: 34rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.upload-hint {
  font-size: 26rpx;
  color: #95a5a6;
}

.image-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.preview-image {
  width: 100%;
  max-height: 520rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.preview-image:active {
  transform: scale(0.98);
}

.image-actions {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.action-btn.primary {
  background: linear-gradient(135deg, #4CAF50 0%, #66bb6a 100%);
  color: white;
}

.action-btn.primary:active {
  background: linear-gradient(135deg, #388e3c 0%, #4CAF50 100%);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.action-btn.secondary {
  background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
  color: #666;
}

.action-btn.secondary:active {
  background: linear-gradient(135deg, #e0e0e0 0%, #d0d0d0 100%);
  transform: translateY(2rpx);
}

.action-btn[disabled] {
  background: #e0e0e0;
  color: #bdbdbd;
  box-shadow: none;
}

/* 识别中 */
.recognizing {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  background: white;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(76, 175, 80, 0.12);
}

.loading-spinner {
  width: 100rpx;
  height: 100rpx;
  border: 8rpx solid #f0f0f0;
  border-top: 8rpx solid #4CAF50;
  border-right: 8rpx solid #66bb6a;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.2);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 30rpx;
  color: #555;
  font-weight: 500;
  letter-spacing: 1rpx;
}

/* 识别结果 */
.result-section {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  animation: fadeInUp 0.5s ease;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 25rpx;
  padding-bottom: 25rpx;
  border-bottom: 3rpx solid #f0f0f0;
}

.result-title {
  font-size: 38rpx;
  font-weight: bold;
  color: #2c3e50;
  letter-spacing: 1rpx;
}

.insect-badge {
  padding: 10rpx 24rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  letter-spacing: 1rpx;
}

.insect-badge.beneficial {
  background: linear-gradient(135deg, #4CAF50 0%, #66bb6a 100%);
}

.insect-badge.harmful {
  background: linear-gradient(135deg, #f44336 0%, #e91e63 100%);
}

.insect-name {
  font-size: 46rpx;
  font-weight: bold;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 35rpx;
  padding: 25rpx;
  background: linear-gradient(135deg, #f8fff8 0%, #ffffff 100%);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.1);
  letter-spacing: 2rpx;
  border: 2rpx solid rgba(76, 175, 80, 0.1);
}

.encyclopedia {
  margin-bottom: 35rpx;
}

.encyclopedia-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 25rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #4CAF50;
  letter-spacing: 1rpx;
}

.encyclopedia-content {
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 20rpx;
  padding: 35rpx;
  line-height: 2;
  border: 2rpx solid #e8e8e8;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.content-text {
  font-size: 30rpx;
  color: #555;
  line-height: 2.2;
  white-space: pre-wrap;
  word-break: break-word;
  letter-spacing: 0.5rpx;
  text-align: justify;
}

/* 防治工具 */
.prevention-section {
  background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
  border-radius: 20rpx;
  padding: 35rpx;
  margin-top: 35rpx;
  border-left: 8rpx solid #ff9800;
  box-shadow: 0 4rpx 16rpx rgba(255, 152, 0, 0.15);
}

.prevention-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 20rpx;
  letter-spacing: 1rpx;
}

.prevention-text {
  font-size: 28rpx;
  color: #666;
  line-height: 2;
  margin-bottom: 25rpx;
  display: block;
  letter-spacing: 0.5rpx;
}

.taobao-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #ff6b35 0%, #ff9800 100%);
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 53, 0.3);
  transition: all 0.3s ease;
  letter-spacing: 1rpx;
}

.taobao-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.25);
}

.reset-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
  color: #666;
  border: none;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
  margin-top: 35rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  letter-spacing: 1rpx;
}

.reset-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 错误提示 */
.error-section {
  background: white;
  border-radius: 24rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 30rpx rgba(244, 67, 54, 0.12);
  animation: fadeInUp 0.5s ease;
}

.error-icon {
  font-size: 100rpx;
  display: block;
  margin-bottom: 30rpx;
  animation: shake 0.5s ease;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-10rpx); }
  75% { transform: translateX(10rpx); }
}

.error-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 40rpx;
  display: block;
  line-height: 1.8;
  letter-spacing: 0.5rpx;
}

.retry-btn {
  width: 240rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #66bb6a 100%);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 20rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
  letter-spacing: 1rpx;
}

.retry-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.25);
}

