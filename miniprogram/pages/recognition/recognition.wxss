/* pages/recognition/recognition.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f9ff 0%, #ffffff 100%);
  padding: 40rpx 30rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #666;
}

/* 上传区域 */
.upload-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  border: 3rpx dashed #4CAF50;
  border-radius: 15rpx;
  background: #f8fff8;
}

.upload-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 10rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
}

.image-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.preview-image {
  width: 100%;
  max-height: 500rpx;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
}

.image-actions {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #4CAF50 0%, #8bc34a 100%);
  color: white;
}

.action-btn.secondary {
  background: #f5f5f5;
  color: #666;
}

.action-btn[disabled] {
  background: #ccc;
  color: #999;
}

/* 识别中 */
.recognizing {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 识别结果 */
.result-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.insect-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: white;
}

.insect-badge.beneficial {
  background: linear-gradient(135deg, #4CAF50 0%, #8bc34a 100%);
}

.insect-badge.harmful {
  background: linear-gradient(135deg, #f44336 0%, #e91e63 100%);
}

.insect-name {
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #f8fff8 0%, #ffffff 100%);
  border-radius: 15rpx;
}

.encyclopedia {
  margin-bottom: 30rpx;
}

.encyclopedia-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.encyclopedia-content {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 30rpx;
  line-height: 2;
}

.content-text {
  font-size: 28rpx;
  color: #555;
  line-height: 2;
  white-space: pre-wrap;
  word-break: break-word;
}

/* 防治工具 */
.prevention-section {
  background: #fff3e0;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  border-left: 6rpx solid #ff9800;
}

.prevention-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.prevention-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 20rpx;
  display: block;
}

.taobao-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #ff6b35 0%, #ff9800 100%);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.reset-btn {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin-top: 30rpx;
}

/* 错误提示 */
.error-section {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.error-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  display: block;
}

.retry-btn {
  width: 200rpx;
  height: 70rpx;
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 35rpx;
  font-size: 26rpx;
}

