.container {
  position: relative;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
  padding: calc(env(safe-area-inset-top, 0rpx) + 10rpx) 0 calc(env(safe-area-inset-bottom, 0rpx) + 20rpx) 0;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  gap: 0;
}

.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  object-fit: cover;
  filter: blur(5rpx);
}

/* 搜索框 */
.search-box {
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.search-input {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  box-shadow: inset 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.search-placeholder {
  margin-left: 20rpx;
  flex: 1;
  font-size: 28rpx;
  color: #999;
}

/* 轮播图 */
.swiper-container {
  width: calc(100% - 40rpx);
  border-radius: 0;
  overflow: visible;
  box-shadow: none;
  margin: 0 20rpx;
  position: relative;
  z-index: 1;
}

swiper {
  height: 500rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  display: block;
}

/* 功能入口 */
.features {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(140rpx, 1fr));
  gap: 24rpx 16rpx;
  background: linear-gradient(135deg, rgba(245, 250, 240, 0.9) 0%, rgba(230, 243, 225, 0.9) 100%); /* 与列表卡片相近的浅绿背景 */
  backdrop-filter: blur(10rpx);
  padding: 30rpx 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  margin: 20rpx;
  position: relative;
  z-index: 1;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 8rpx;
  transition: transform 0.3s ease;
}

.feature-item:active {
  transform: scale(0.95);
}

.feature-icon {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 12rpx;
  border-radius: 18rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.feature-item text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  text-align: center;
}

/* 精选昆虫 */
.section {
  background: linear-gradient(135deg, rgba(245, 250, 240, 0.9) 0%, rgba(230, 243, 225, 0.9) 100%);
  backdrop-filter: blur(10rpx);
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 0 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  position: relative;
}

.section-title text::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 0;
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #8BC34A 100%);
  border-radius: 2rpx;
}

.more {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: 500;
  padding: 10rpx 20rpx;
  background: rgba(76, 175, 80, 0.1);
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.more:active {
  background: rgba(76, 175, 80, 0.2);
  transform: scale(0.95);
}

.section-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.insect-list {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0 30rpx;
  gap: 20rpx;
}

.insect-item-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(245, 250, 240, 0.9) 0%, rgba(230, 243, 225, 0.9) 100%); /* 浅米底，与第二张效果一致 */
  border-radius: 18rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  overflow: hidden;
}

.insect-item-row:active {
  transform: translateX(4rpx);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
}

.insect-item-row .insect-img {
  width: 200rpx;
  height: 200rpx;
  object-fit: cover;
  flex-shrink: 0;
  display: block;
  border-radius: 12rpx;
}

.insect-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  background: linear-gradient(135deg, rgba(245, 250, 240, 0.9) 0%, rgba(230, 243, 225, 0.9) 100%); /* 轻微浅绿渐变，仅文字区域 */
  padding: 24rpx;
  justify-content: center;
  color: #1f1f1f; /* 提升对比度 */
  border-radius: 12rpx;
}

.insect-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.insect-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: white;
  font-size: 28rpx;
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.insect-item {
  animation: fadeInUp 0.6s ease-out;
}

.insect-item:nth-child(1) { animation-delay: 0.1s; }
.insect-item:nth-child(2) { animation-delay: 0.2s; }
.insect-item:nth-child(3) { animation-delay: 0.3s; }
.insect-item:nth-child(4) { animation-delay: 0.4s; }
.insect-item:nth-child(5) { animation-delay: 0.5s; }
.insect-item:nth-child(6) { animation-delay: 0.6s; }