/* pages/theater/theater.wxss */
.container {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding-bottom: 20rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin: 40rpx 0;
  text-align: center;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
}

/* 分类标签 */
.category-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 32rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
  font-weight: 500;
}

.tab-item.active {
  color: #4CAF50;
  font-weight: bold;
  background: rgba(76, 175, 80, 0.1);
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 6rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #8BC34A 100%);
  border-radius: 3rpx;
}

.tab-item:active {
  background: rgba(76, 175, 80, 0.05);
}

/* 视频列表 */
.video-list {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  gap: 20rpx;
}

.video-item {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.video-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.video-thumb {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.video-info {
  padding: 25rpx;
}

.video-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.video-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 15rpx;
  font-size: 24rpx;
  color: #666;
}

.insect-name {
  background: #e8f5e8;
  color: #4CAF50;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.duration {
  color: #999;
}

.view-count {
  color: #999;
}

.video-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: white;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  color: white;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx;
  color: white;
  font-size: 24rpx;
}

.no-more {
  text-align: center;
  padding: 30rpx;
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
}

/* 动画效果 */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.video-item {
  animation: slideInUp 0.6s ease-out;
}

.video-item:nth-child(1) { animation-delay: 0.1s; }
.video-item:nth-child(2) { animation-delay: 0.2s; }
.video-item:nth-child(3) { animation-delay: 0.3s; }
.video-item:nth-child(4) { animation-delay: 0.4s; }