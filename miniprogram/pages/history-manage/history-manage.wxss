.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 顶部操作栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  padding: 10rpx 30rpx;
  background-color: #4CAF50;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.action-btn:active {
  background-color: #45a049;
}

/* 删除模式提示 */
.delete-tip {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  background-color: #fff3cd;
  border-bottom: 1rpx solid #ffc107;
}

.delete-tip-left {
  flex: 1;
}

.delete-tip-left text {
  font-size: 28rpx;
  color: #856404;
}

.delete-tip-right {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.select-all-btn {
  padding: 10rpx 30rpx;
  background-color: #4CAF50;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.select-all-btn:active {
  background-color: #45a049;
}

.delete-confirm-btn {
  padding: 10rpx 30rpx;
  background-color: #dc3545;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.delete-confirm-btn:active {
  background-color: #c82333;
}

/* 浏览记录列表 */
.history-list {
  padding: 20rpx 40rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  transition: all 0.3s;
}

.history-item.selected {
  background-color: #e3f2fd;
  border: 2rpx solid #2196F3;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
}

/* 选择框 */
.select-checkbox {
  margin-right: 20rpx;
  flex-shrink: 0;
}

.checkbox {
  width: 44rpx;
  height: 44rpx;
  border: 3rpx solid #ccc;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  transition: all 0.3s;
  box-sizing: border-box;
}

.checkbox.checked {
  background-color: #4CAF50;
  border-color: #4CAF50;
  color: #fff;
  font-weight: bold;
}

.checkbox text {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
  line-height: 1;
}

/* 昆虫图片 */
.history-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

/* 昆虫信息 */
.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.history-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.history-time {
  font-size: 24rpx;
  color: #999;
}

/* 删除模式高亮覆盖层 */
.delete-overlay {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  background-color: #2196F3;
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  box-shadow: 0 2rpx 8rpx rgba(33, 150, 243, 0.3);
  font-size: 24rpx;
  font-weight: bold;
  line-height: 1.2;
  pointer-events: none;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
}
