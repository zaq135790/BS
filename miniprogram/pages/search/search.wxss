/* pages/search/search.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 40rpx;
}

/* 搜索栏 */
.search-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-box {
  flex: 1;
}

.search-input {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
}

.search-input icon {
  margin-right: 15rpx;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.placeholder-style {
  color: #999;
  font-size: 28rpx;
}

.cancel-btn {
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #333;
  padding: 10rpx 0;
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  color: white;
  font-size: 28rpx;
}

/* 搜索历史 */
.history-section {
  padding: 30rpx 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.clear-btn {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  padding: 10rpx 20rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.history-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  padding: 25rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.history-item icon {
  margin-right: 20rpx;
}

.history-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.delete-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
  margin-left: 20rpx;
}

/* 搜索结果 */
.results-section {
  padding: 30rpx 20rpx;
}

.result-header {
  margin-bottom: 30rpx;
}

.result-count {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.result-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 25rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.result-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 15rpx;
  margin-right: 25rpx;
  background: #f5f5f5;
}

.result-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.result-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.result-type {
  font-size: 24rpx;
  color: #4CAF50;
  padding: 6rpx 16rpx;
  background: rgba(76, 175, 80, 0.1);
  border-radius: 20rpx;
  display: inline-block;
  width: fit-content;
}

.result-item icon {
  margin-left: 20rpx;
}

/* 空状态 */
.empty-result,
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 40rpx;
  color: white;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.8;
}

.empty-text {
  font-size: 32rpx;
  margin-bottom: 15rpx;
  opacity: 0.9;
}

.empty-hint {
  font-size: 26rpx;
  opacity: 0.7;
}

