.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 分类标签 */
.category-tabs {
  display: flex;
  background-color: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #666;
  padding: 20rpx 0;
  position: relative;
  transition: color 0.3s;
}

.tab-item.active {
  color: #4CAF50;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #4CAF50;
  border-radius: 2rpx;
}

/* 昆虫列表 */
.insect-list {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.insect-card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.insect-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.15);
}

.parent-card {
  display: flex;
  flex-direction: column;
}

.insect-image {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.insect-info {
  padding: 30rpx;
  background: #F5E6D3;
}

.parent-info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.insect-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.adult-text-row {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.adult-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 8rpx;
}

.adult-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-wrap;
}

